{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2016",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "node"
    ],
    "rootDir": ".",
    "paths": {
      "@moeota/shiki-components": [
        "packages/components/src"
      ],
      "@moeota/shiki-shared": [
        "packages/shared/src"
      ],
      "@moeota/vuepress-theme-shiki": [
        "packages/shiki/src"
      ],
    }
  },
  "include": [
    "packages/global.d.ts",
    "packages/*/src",
    "packages/*/lib",
    "packages/*/stories",
    "packages/*/__tests__",
  ]
}